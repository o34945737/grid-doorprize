<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="container py-4">
  <div class="d-flex justify-content-between align-items-center">
    <h2>Admin Dashboard</h2>
    <a href="/admin/logout" class="btn btn-outline-secondary btn-sm">Logout</a>
  </div>

  <div class="row mt-4 g-3">
    <div class="col-md-3">
      <div class="card p-3">
        <div class="fw-bold">Total Peserta</div>
        <div class="display-6"><%= pCount %></div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card p-3">
        <div class="fw-bold">Total Draw</div>
        <div class="display-6"><%= drawCount %></div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card p-3">
        <div class="fw-bold">Total Pemenang</div>
        <div class="display-6"><%= winnerCount %></div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card p-3">
        <div class="fw-bold">Eligible</div>
        <div class="display-6"><%= eligibleCount %></div>
      </div>
    </div>
  </div>

  <div class="mt-4 d-flex gap-2 flex-wrap">
    <a href="/admin/import" class="btn btn-outline-warning">Import Excel Peserta</a>
    <a href="/admin/grid-draw" class="btn btn-success">Grid Draw (Kotak Nama)</a>
    <a href="/admin/participants" class="btn btn-primary">Participants</a>
    <a href="/admin/draws" class="btn btn-outline-primary">Riwayat Draw</a>
    <a href="/api/draw-winners.csv" class="btn btn-outline-secondary">Export Semua Pemenang CSV</a>
    <a href="/qr/register" class="btn btn-outline-secondary">QR Register</a>
  </div>
</body>
</html>
