<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Admin - Riwayat Draw</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="container py-4">
  <div class="d-flex justify-content-between align-items-center">
    <h2>Riwayat Draw</h2>
    <div class="d-flex gap-2">
      <a href="/doorprize/admin" class="btn btn-outline-secondary btn-sm">Dashboard</a>
      <a href="/doorprize/admin/grid-draw" class="btn btn-outline-secondary btn-sm">Grid Draw</a>
      <a href="/doorprize/admin/logout" class="btn btn-outline-secondary btn-sm">Logout</a>
    </div>
  </div>

  <div class="mt-3">
    <a href="/doorprize/api/draw-winners.csv" class="btn btn-outline-primary">Export Semua Pemenang CSV</a>
  </div>

  <div class="mt-4">
    <table class="table table-sm table-striped">
      <thead>
        <tr>
          <th>Draw ID</th>
          <th>Hadiah</th>
          <th>Kuota</th>
          <th>Jumlah Pemenang</th>
          <th>Waktu</th>
          <th>Export</th>
        </tr>
      </thead>
      <tbody>
        <% draws.forEach(d => { %>
          <tr>
            <td><%= d.id %></td>
            <td><%= d.prize_name %></td>
            <td><%= d.quota %></td>
            <td><%= d.winner_count %></td>
            <td><%= d.created_at %></td>
            <td>
              <a class="btn btn-sm btn-outline-secondary" href="/doorprize/api/draws/<%= d.id %>/winners.csv">
                CSV Draw Ini
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
