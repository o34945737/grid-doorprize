<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Doorprize - Register</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="container py-5">
  <h2>Registrasi Doorprize</h2>

  <% if (error) { %>
    <div class="alert alert-danger mt-3"><%= error %></div>
  <% } %>

  <form method="POST" action="/register" class="mt-3" style="max-width:420px">
    <div class="mb-3">
      <label class="form-label">Nama *</label>
      <input name="name" class="form-control" required />
    </div>

    <div class="mb-3">
      <label class="form-label">Department (opsional)</label>
      <input name="department" class="form-control" placeholder="Contoh: IT / HR / Marketing" />
    </div>

    <button class="btn btn-primary">Submit</button>
  </form>
</body>
</html>
