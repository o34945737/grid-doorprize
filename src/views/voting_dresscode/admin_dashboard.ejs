<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Admin - Voting Dresscode</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4 bg-light">
<div class="container">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <h4 class="m-0">Voting Dresscode - Admin</h4>
      <div class="text-muted small">Login: <b><%= admin.username %></b></div>
    </div>
    <div class="d-flex gap-2">
      <a href="/voting-dresscode/" class="btn btn-outline-secondary btn-sm">User Page</a>
      <a href="/voting-dresscode/admin/candidates" class="btn btn-outline-primary btn-sm">Candidates</a>
      <a href="/voting-dresscode/admin/results" class="btn btn-outline-primary btn-sm">Results</a>
      <a href="/voting-dresscode/admin/logout" class="btn btn-outline-danger btn-sm">Logout</a>
    </div>
  </div>

  <div class="row g-3 mb-3">
    <div class="col-md-6">
      <div class="card"><div class="card-body">
        <div class="text-muted">Candidates</div>
        <div class="fs-3 fw-bold"><%= stats.candidates %></div>
      </div></div>
    </div>
    <div class="col-md-6">
      <div class="card"><div class="card-body">
        <div class="text-muted">Votes (total)</div>
        <div class="fs-3 fw-bold"><%= stats.votes %></div>
        <div class="text-muted small">* 1 voter idealnya = 2 vote (Cowok+Cewek)</div>
      </div></div>
    </div>
  </div>

  <!-- TOP MALE -->
  <div class="card mb-3">
    <div class="card-body">
      <div class="fw-bold mb-2">ğŸ† Top Male (Top 5)</div>
      <% const topM = topMale || []; %>
      <% if (!topM.length) { %>
        <div class="text-muted">Belum ada data.</div>
      <% } else { %>
        <div class="d-flex flex-wrap gap-2">
          <% topM.forEach((r, i)=>{ %>
            <div class="border rounded p-2 bg-white" style="min-width:220px">
              <div class="small text-muted">#<%= i+1 %></div>
              <div class="fw-bold"><%= r.photo_name %></div>
              <div class="small">ğŸ—³ <b><%= r.vote_count %></b></div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

  <!-- TOP FEMALE -->
  <div class="card">
    <div class="card-body">
      <div class="fw-bold mb-2">ğŸ† Top Female (Top 5)</div>
      <% const topF = topFemale || []; %>
      <% if (!topF.length) { %>
        <div class="text-muted">Belum ada data.</div>
      <% } else { %>
        <div class="d-flex flex-wrap gap-2">
          <% topF.forEach((r, i)=>{ %>
            <div class="border rounded p-2 bg-white" style="min-width:220px">
              <div class="small text-muted">#<%= i+1 %></div>
              <div class="fw-bold"><%= r.photo_name %></div>
              <div class="small">ğŸ—³ <b><%= r.vote_count %></b></div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

</div>
</body>
</html>
