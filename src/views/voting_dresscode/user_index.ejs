<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Voting Dresscode</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-light">

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="m-0">ðŸ“¸ Voting Dresscode</h4>
    <a class="btn btn-outline-secondary btn-sm" href="/voting-dresscode/admin/">Admin</a>
  </div>

  <% if (!rows.length) { %>
    <div class="alert alert-secondary">Belum ada foto yang diupload admin.</div>
  <% } else { %>

    <div class="row g-3">
      <% rows.forEach(r => { %>
        <div class="col-6 col-md-4 col-lg-3">
          <div class="card h-100 shadow-sm">
            <img src="<%= r.photo_url %>" class="card-img-top" style="height:200px; object-fit:cover;">
            <div class="card-body">
              <div class="fw-bold"><%= r.photo_name %></div>
              <div class="d-grid gap-2 mt-2">
                <a class="btn btn-warning" href="/voting-dresscode/c/<%= r.id %>">Vote</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

  <% } %>
</div>

</body>
</html>
