<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <title>Admin Login</title>

  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  />

  <style>
    body{
      background: radial-gradient(circle at top, #ffedcc, #fff);
      min-height:100vh;
      display:flex;
      align-items:center;
      justify-content:center;
      padding: 24px;
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
    }

    .login-card{
      width: min(420px, 92vw);
      border-radius: 18px;
      border: none;
      box-shadow: 0 10px 40px rgba(255, 165, 0, 0.25);
      overflow:hidden;
    }

    .login-head{
      padding: 18px 18px 10px;
      text-align:center;
      background: linear-gradient(135deg, rgba(255,152,0,0.16), rgba(255,193,7,0.10));
      border-bottom: 1px solid rgba(255, 165, 0, 0.20);
    }

    .title{
      font-weight:900;
      margin:0;
      font-size: 20px;
      color:#1f2937;
    }

    .subtitle{
      margin: 6px 0 0;
      color:#6b7280;
      font-size: 13px;
    }

    .login-body{
      padding: 18px;
      background: #fff;
    }

    .form-label{
      font-weight: 700;
      color:#374151;
    }

    .form-control{
      border-radius: 12px;
      padding: 10px 12px;
    }

    .btn-login{
      width:100%;
      border: none;
      border-radius: 14px;
      padding: 11px 14px;
      font-weight: 800;
      background: linear-gradient(135deg, #ff9800, #ffb300);
      color:#fff;
      box-shadow: 0 12px 28px rgba(255,152,0,0.25);
    }

    .btn-login:hover{
      opacity: 0.92;
    }

    .mini-links{
      margin-top: 12px;
      text-align:center;
      font-size: 13px;
      color:#6b7280;
    }
    .mini-links a{
      color:#f59e0b;
      text-decoration:none;
      font-weight:700;
    }
    .mini-links a:hover{
      text-decoration:underline;
    }

    .alert{
      border-radius: 12px;
      margin-bottom: 14px;
    }
  </style>
</head>

<body>
  <div class="card login-card">
    <div class="login-head">
      <h1 class="title">Admin Login</h1>
      <p class="subtitle">Masuk untuk mengelola peserta & undian doorprize</p>
    </div>

    <div class="login-body">
      <% if (typeof error !== "undefined" && error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <form method="POST" action="/admin/login" autocomplete="off">
        <div class="mb-3">
          <label class="form-label">Username</label>
          <input
            name="username"
            class="form-control"
            placeholder="Masukkan username"
            required
          />
        </div>

        <div class="mb-3">
          <label class="form-label">Password</label>
          <input
            name="password"
            type="password"
            class="form-control"
            placeholder="Masukkan password"
            required
          />
        </div>

        <button type="submit" class="btn btn-login">
          Login
        </button>
      </form>

      <div class="mini-links">
        <span>Halaman peserta:</span>
        <a href="/register">Register</a>
      </div>
    </div>
  </div>
</body>
</html>
